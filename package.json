{
    "name": "ttAPI",
    "version": "1.0.0",
    "main": "server.js",
    "repository": "git@github.com:manorie/ttAPI.git",
    "author": "Mehmet Cetin <mcetin.cm@gmail.com>",
    "license": "GPL-3.0-or-later",
    "private": false,
    "engines": {
        "node": "10.6.0"
    },
    "scripts": {
        "dev": "nodemon server.js",
        "start": "node server.js",
        "test": "nyc --reporter=html --reporter=text mocha --recursive --exit",
        "tdd": "mocha --watch --recursive",
        "lint": "eslint .",
        "coverage": "nyc report --reporter=text-lcov | coveralls"
    },
    "dependencies": {
        "bcrypt": "^3.0.0",
        "body-parser": "^1.18.3",
        "compression": "^1.7.3",
        "express": "^4.16.3",
        "jsonwebtoken": "^8.3.0",
        "lodash": "^4.17.10",
        "mongoose": "^5.2.5",
        "morgan": "^1.9.0",
        "validator": "^10.5.0",
        "winston": "^3.0.0"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-http": "^4.0.0",
        "coveralls": "^3.0.2",
        "eslint": "^5.2.0",
        "eslint-config-airbnb-base": "^13.0.0",
        "eslint-plugin-import": "^2.13.0",
        "mocha": "^5.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^12.0.2"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "no-underscore-dangle": [
                "off"
            ]
        }
    }
}
